<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.infinite.jsf.Provider.model">

  <class name="PasswordHistory" table="password_history">
  
    <id name="id" column="id">
      <generator class="identity"/>
    </id>
    
    <many-to-one name="provider"
                 class="Provider"
                 column="Provider_id"
                 not-null="true"
                 fetch="select"/>
    
    <property name="passwordHash" column="password_hash" not-null="true" type="string"/>
    <property name="changedAt"    column="changed_at"    not-null="true" type="timestamp"/>

  </class>
</hibernate-mapping>
